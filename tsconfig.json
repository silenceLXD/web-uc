{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "types" : ["lodash"],
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": "src/",
    "paths": {
        "@services": [ "app/services" ],
        "@services/*": [ "app/services/*" ],
        "@pipes": [ "app/pipes" ],
        "@pipes/*": [ "app/pipes/*" ]
    }

  }
}
